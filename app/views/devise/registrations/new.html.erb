<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default top_buffer_54">
      <div class="panel-heading"><strong><%= t('.sign_up') %></strong></div>
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :profile_picture %>
            <%= f.file_field :profile_picture %>
          </div>

          <div class="form-group">
            <%= f.label :city %><br />
            <%= f.text_field :city, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :country %><br />
            <%= f.text_field :country, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :about %><br />
            <%= f.text_area :about, autofocus: true, class: 'form-control user_about' %>
          </div>

            <div class="form-group">
              <%= f.label :email, "#{t('.mail')}" %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, "#{t('.password')}" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t('.minimum') %>)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "#{t('.confirmation')}" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="actions">
              <%= f.submit "#{t('.sign_up')}", class: 'btn btn-default' %>
            </div>
          <% end %>

          <div class="devise_shared_links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
