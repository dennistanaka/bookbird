<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default top_buffer_54">
      <div class="panel-heading"><strong><%= t('.log_in') %></strong></div>
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, "#{t('.mail')}" %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, "#{t('.password')}" %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "#{t('.remember')}" %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "#{t('.log_in')}", class: 'btn btn-default' %>
            </div>
          <% end %>

          <div class="devise_shared_links">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>